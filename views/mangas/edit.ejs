<% layout("layouts/boilerplate") %>
<div class="row">
    <h1 class="text-center">Edit Manga</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/mangas/<%= manga._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="manga[title]" value="<%=manga.title %>" required/>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="manga[location]" value="<%=manga.location %>" required/>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Cost/Volume</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" id="price"
                        placeholder="0.00" aria-describedby="price-label" name="manga[price]" value="<%=manga.price %>" required/>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" id="description" name="manga[description]" required><%= manga.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Add more image(s)...</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                  </div>
                  <div class="mb-3">
                    <% manga.images.forEach((img, i) => { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt=""> 
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                    <% }) %>
                  </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Manga</button>
                </div>
            </div>
        </form>
        <a class="btn btn-primary" href="/mangas/<%= manga._id %>">Back To Manga</a>

    </div>
</div>